{
    "name": "YouTube Playlist Quick Add",
    "version": "1.0",
    "description": "Insert Add to Playlist buttons under youtube videos to save time.",
    "manifest_version": 2,
    "browser_action":{
        "default_popup": "popup.html"
    },
    "background": {
      "scripts": [
        "background.js"
      ],
      "persistent": false
    },
    "oauth2": {
        "client_id": "636168374509-3v7p5j2ubi0ogd69k6751gafnh8b7mli.apps.googleusercontent.com",
        "scopes": ["https://www.googleapis.com/auth/youtube"]
    },
    "permissions":[
        "identity",
        "storage",
        "tabs",
        "https://www.youtube.com/*"
    ]
  }